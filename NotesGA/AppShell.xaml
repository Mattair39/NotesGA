<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NotesGA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:NotesGA.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="NotesGA">
    
    <TabBar>
        <Tab Title="Notes" Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}">
            <ShellContent ContentTemplate="{DataTemplate views:AllNotesPageGA}" />
        </Tab>
        <Tab Title="About" Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPageGA}" />
        </Tab>
    </TabBar>

</Shell>
