<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NotesGA.ViewModels"
             x:Class="NotesGA.Views.AboutPageGA">
    <ContentPage.BindingContext>
        <viewModels:AboutViewModelGA />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="10" Margin="10" HorizontalOptions="Center">

        <Border WidthRequest="100" HeightRequest="100">
            <Image Source="foto.jpg"
                   Aspect="AspectFill" />

        </Border>

        <Label FontSize="22" FontAttributes="Bold" Text="{Binding Title}" HorizontalOptions="Center"/>
        <Label Text="{Binding Message}" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>